<h2>Mechanic: <%= @mechanic.name %></h2>
<h3>Years of Experience: <%= @mechanic.years_experience %></h3>
<table id='rides_list'>
  <caption>Current rides they're working on:</caption>
  <tr>
    <th>Name of Ride</th>
    <th>Thrill Rating</th>
  </tr>
  <% @mechanic.rides_working_on.each do |ride| %>
    <tr id='ride_<%= ride.id%>'>
      <td><%= ride.name %></td>
      <td><%= ride.thrill_rating %></td>
    </tr>
  <% end %>
</table>

<%= form_with url: '/mechanics', local: true, method: :post do |form| %>
  <h3>Add a ride to workload:</h3>
  <%= form.hidden_field :mechanic_id, value: @mechanic.id %>
  <%= label :add_ride, :ride_id, 'Ride Id:' %>
  <%= text_field :add_ride, :ride_id %>
  <%= form.submit 'Add Ride to Workload' %>
<% end %>
